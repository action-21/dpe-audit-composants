---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<header>
    <h2>{title}</h2>

    <slot />
</header>

<style>
    header {
        position: relative;
        padding: 1rem;
        margin-bottom: 1rem;
        text-align: center;
    }
    h2 {
        font-weight: 600;
    }
</style>
