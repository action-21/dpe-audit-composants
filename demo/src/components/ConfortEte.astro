---
import { Enveloppe } from "dpe-audit";
import { NiveauConfortEte } from "~";
import { Alert } from "./Alert";
import { Card, CardHeader } from "./Card";
import { DialogButton } from "./Dialog";

interface Props {
    confort_ete?: Enveloppe.ConfortEte;
}

const { confort_ete = null } = Astro.props;
---

<Card>
    <CardHeader title="Confort d'été">
        <DialogButton name="confort-ete" />
    </CardHeader>

    {confort_ete == null && <Alert type="note" content="Non disponible" />}

    {
        confort_ete && (
            <NiveauConfortEte
                class="max-w-[200px] m-auto"
                confort_ete={confort_ete}
            />
        )
    }
</Card>
