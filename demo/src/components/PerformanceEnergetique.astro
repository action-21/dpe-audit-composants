---
import { Audit, EtiquetteEnergie } from "~";
import { Card, CardHeader } from "./Card";
import { DialogButton } from "./Dialog";

interface Props {
    etiquette_energie: Audit.EtiquetteEnergie;
    cef: number;
    cep: number;
}

const { etiquette_energie, cep, cef } = Astro.props;
---

<Card>
    <CardHeader title="Performance énergétique">
        <DialogButton name="performance-energetique" />
    </CardHeader>

    <div class="flex flex-nowrap items-center">
        <div class="w-[200px]">
            <EtiquetteEnergie etiquette_energie={etiquette_energie} />
        </div>

        <div class="grow">
            <div class="stats stats-vertical">
                <div class="stat">
                    <div class="stat-title">Consommation finale</div>
                    <div class="stat-value text-primary">{cef.toFixed()}</div>
                    <div class="stat-desc">kWh<sub>ef</sub>/m²/an</div>
                </div>
                <div class="stat">
                    <div class="stat-title">Consommation primaire</div>
                    <div class="stat-value text-primary">{cep.toFixed()}</div>
                    <div class="stat-desc">kWh<sub>ep</sub>/m²/an</div>
                </div>
            </div>
        </div>
    </div>
</Card>
