---
import { Enveloppe, SchemaRepartitionDeperditions } from "~";
import Card from "./Card.astro";
import CardHeader from "./CardHeader.astro";
import DialogButton from "./DialogButton.astro";

interface Props {
    deperditions: Enveloppe.Deperdition[];
}

const { deperditions } = Astro.props;
---

<Card>
    <CardHeader title="Répartition des déperditions">
        <DialogButton name="repartition-deperditions" />
    </CardHeader>

    <SchemaRepartitionDeperditions deperditions={deperditions} />
</Card>
