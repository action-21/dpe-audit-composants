---
import { Enveloppe } from "dpe-audit";

interface Props {
    class?: string;
    value?: Enveloppe.Performance;
}

const { value = null, class: className = "" } = Astro.props;
const text = value ? Enveloppe.performanceToString(value) : "-";
---

<span class:list={[className]} data-performance={value}>
    {text}
</span>

<style>
    span {
        text-wrap: nowrap;
        padding: 0.3rem 1rem;
        font-weight: 600;
        border-radius: calc(infinity * 1px);

        &[data-performance="tres_bonne"] {
            color: #ffffff;
            background-color: #2caf85;
        }
        &[data-performance="bonne"] {
            color: #ffffff;
            background-color: #a5cc74;
        }
        &[data-performance="moyenne"] {
            color: #ffffff;
            background-color: #f49838;
        }
        &[data-performance="insuffisante"] {
            color: #ffffff;
            background-color: #e52322;
        }
    }
</style>
