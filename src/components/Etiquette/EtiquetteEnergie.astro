---
import { Audit } from "dpe-audit";
import EtiquetteEnergieDefault from "../../assets/etiquette-energie.svg";
import EtiquetteEnergieA from "../../assets/etiquette-energie-a.svg";
import EtiquetteEnergieB from "../../assets/etiquette-energie-b.svg";
import EtiquetteEnergieC from "../../assets/etiquette-energie-c.svg";
import EtiquetteEnergieD from "../../assets/etiquette-energie-d.svg";
import EtiquetteEnergieE from "../../assets/etiquette-energie-e.svg";
import EtiquetteEnergieF from "../../assets/etiquette-energie-f.svg";
import EtiquetteEnergieG from "../../assets/etiquette-energie-g.svg";

interface Props {
    class?: string;
    etiquette_energie?: Audit.EtiquetteEnergie;
}

const { etiquette_energie = null, class: className = "" } = Astro.props;

const Image = ((etiquette_energie) => {
    switch (etiquette_energie) {
        case Audit.EtiquetteEnergie.A:
            return EtiquetteEnergieA;
        case Audit.EtiquetteEnergie.B:
            return EtiquetteEnergieB;
        case Audit.EtiquetteEnergie.C:
            return EtiquetteEnergieC;
        case Audit.EtiquetteEnergie.D:
            return EtiquetteEnergieD;
        case Audit.EtiquetteEnergie.E:
            return EtiquetteEnergieE;
        case Audit.EtiquetteEnergie.F:
            return EtiquetteEnergieF;
        case Audit.EtiquetteEnergie.G:
            return EtiquetteEnergieG;
        default:
            return EtiquetteEnergieDefault;
    }
})(etiquette_energie);
---

<Image class={className} />

<style>
    svg {
        width: 100%;
        height: auto;
    }
</style>
