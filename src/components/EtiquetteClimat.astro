---
import { Audit } from "dpe-audit";
import EtiquetteClimatA from "../assets/etiquette-climat-a.svg";
import EtiquetteClimatB from "../assets/etiquette-climat-b.svg";
import EtiquetteClimatC from "../assets/etiquette-climat-c.svg";
import EtiquetteClimatD from "../assets/etiquette-climat-d.svg";
import EtiquetteClimatE from "../assets/etiquette-climat-e.svg";
import EtiquetteClimatF from "../assets/etiquette-climat-f.svg";
import EtiquetteClimatG from "../assets/etiquette-climat-g.svg";

interface Props {
    class?: string;
    etiquette_climat: Audit.EtiquetteClimat;
}

const { etiquette_climat, class: className = "" } = Astro.props;

const Image = ((etiquette_climat) => {
    switch (etiquette_climat) {
        case Audit.EtiquetteClimat.A:
            return EtiquetteClimatA;
        case Audit.EtiquetteClimat.B:
            return EtiquetteClimatB;
        case Audit.EtiquetteClimat.C:
            return EtiquetteClimatC;
        case Audit.EtiquetteClimat.D:
            return EtiquetteClimatD;
        case Audit.EtiquetteClimat.E:
            return EtiquetteClimatE;
        case Audit.EtiquetteClimat.F:
            return EtiquetteClimatF;
        case Audit.EtiquetteClimat.G:
            return EtiquetteClimatG;
    }
})(etiquette_climat);
---

<Image class={className} />

<style>
    svg {
        width: 100%;
        height: auto;
    }
</style>
