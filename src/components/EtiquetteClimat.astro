---
import { Audit } from 'dpe-audit'
import EtiquetteClimatA from "../images/etiquette-climat/etiquette-climat-a.svg";
import EtiquetteClimatB from "../images/etiquette-climat/etiquette-climat-b.svg";
import EtiquetteClimatC from "../images/etiquette-climat/etiquette-climat-c.svg";
import EtiquetteClimatD from "../images/etiquette-climat/etiquette-climat-d.svg";
import EtiquetteClimatE from "../images/etiquette-climat/etiquette-climat-e.svg";
import EtiquetteClimatF from "../images/etiquette-climat/etiquette-climat-f.svg";
import EtiquetteClimatG from "../images/etiquette-climat/etiquette-climat-g.svg";

interface Props {
    etiquette_climat: Audit.EtiquetteClimat;
}

const { etiquette_climat } = Astro.props;

const Icon = ((etiquette_climat) => {
    switch (etiquette_climat) {
        case Audit.EtiquetteClimat.A:
            return EtiquetteClimatA;
        case Audit.EtiquetteClimat.B:
            return EtiquetteClimatB;
        case Audit.EtiquetteClimat.C:
            return EtiquetteClimatC;
        case Audit.EtiquetteClimat.D:
            return EtiquetteClimatD;
        case Audit.EtiquetteClimat.E:
            return EtiquetteClimatE;
        case Audit.EtiquetteClimat.F:
            return EtiquetteClimatF;
        case Audit.EtiquetteClimat.G:
            return EtiquetteClimatG;
    }
})(etiquette_climat);
---

<Icon class="icon" />

<style>
    .icon {
        width: 100%;
        height: auto;
    }
</style>
