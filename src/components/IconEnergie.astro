---
import { Common } from "dpe-audit";
import Bois from "../icons/bois.svg";
import Electricite from "../icons/electricite.svg";
import Fioul from "../icons/fioul.svg";
import Gaz from "../icons/gaz-naturel.svg";
import GPL from "../icons/gpl.svg";
import Charbon from "../icons/charbon.svg";
import ReseauChaleur from "../icons/reseau-chaleur.svg";
import ReseauFroid from "../icons/reseau-froid.svg";

interface Props {
    class?: string;
    energie: Common.Energie;
    size?: number;
}

const { energie, size = 18, class: className = "" } = Astro.props;

const Icon = ((energie) => {
    switch (energie) {
        case Common.Energie.bois_buche:
            return Bois;
        case Common.Energie.bois_plaquette:
            return Bois;
        case Common.Energie.bois_granule:
            return Bois;
        case Common.Energie.electricite:
            return Electricite;
        case Common.Energie.gaz_naturel:
            return Gaz;
        case Common.Energie.gpl:
            return GPL;
        case Common.Energie.fioul:
            return Fioul;
        case Common.Energie.charbon:
            return Charbon;
        case Common.Energie.reseau_chaleur:
            return ReseauChaleur;
        case Common.Energie.reseau_froid:
            return ReseauFroid;
    }
})(energie);
---

<Icon class={className} width={size} height={size} />
