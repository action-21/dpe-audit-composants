---
import { Energie } from "../data/Common";
import Bois from "../icons/bois.svg";
import Electricite from "../icons/electricite.svg";
import Fioul from "../icons/fioul.svg";
import Gaz from "../icons/gaz-naturel.svg";
import GPL from "../icons/gpl.svg";
import Charbon from "../icons/charbon.svg";
import ReseauChaleur from "../icons/reseau-chaleur.svg";
import ReseauFroid from "../icons/reseau-froid.svg";

interface Props {
    energie: Energie;
    size?: number;
}

const { energie, size = 18 } = Astro.props;

const Icon = ((energie) => {
    switch (energie) {
        case Energie.bois_buche:
            return Bois;
        case Energie.bois_plaquette:
            return Bois;
        case Energie.bois_granule:
            return Bois;
        case Energie.electricite:
            return Electricite;
        case Energie.gaz_naturel:
            return Gaz;
        case Energie.gpl:
            return GPL;
        case Energie.fioul:
            return Fioul;
        case Energie.charbon:
            return Charbon;
        case Energie.reseau_chaleur:
            return ReseauChaleur;
        case Energie.reseau_froid:
            return ReseauFroid;
    }
})(energie)
---

<Icon width={size} height={size} />
